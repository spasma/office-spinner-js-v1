{
  "name": "Kantoor Roulette",
  "version": "1.0.1.3",
  "manifest_version": 2,
  "description": "OfficiÃ«le Kantoor Roulette Chrome Plugin",
  "homepage_url": "http://kantoorroulette.nl",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/jquery.min.js",
      "src/bg/socket.io.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Koffie!",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "content_scripts": [
    {
      "matches": ["*://kantoorroulette.nl/*"],
      "js": ["src/content_script/kantoorroulette.nl.js"]
    }
  ],
  "permissions": [
    "contextMenus",
    "cookies",
    "*://kantoorroulette.nl/*",
    "tts",
    "ttsEngine",
    "storage",
    "idle",
    "notifications",
    "geolocation"
  ]
}